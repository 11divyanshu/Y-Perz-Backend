<!doctype html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/users.css">
    <%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/head_body.ejs') %>
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="home_dash_parent_container1">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Description</th>
                            <th>Profile Pic</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data.length > 0) { %>
                        <% for (let d of data) { %>
                            <tr>
                                <td><%= d.id %></td>
                                <td><%= d.fName %></td>
                                <td><%= d.email %></td>
                                <td><%= d.phone %></td>
                                <td><%= d.location %></td>
                                <td><%= d.desc %></td>
                                <td>
                                    <img src="/<%= d.profilepic %>" style="width: 20px; height: 20px;"/>
                                </td>
                            </tr>
                        <% } %>
                        <% } else { %>
                            <h1>No Users Data Found!</h1>
                        <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Description</th>
                            <th>Profile Pic</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <%- include('../includes/end_body.ejs') %>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="/js/users.js"></script>
</body>

</html>