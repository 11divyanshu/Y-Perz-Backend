<!doctype html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/add-service.css">
    <%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/head_body.ejs') %>
        <% if (confirmation === 202 || confirmation === 204) { %>
            <div class="confirmation_modal d-flex" id="confimation_modal_id">
                <div class="confirmation_modal_class">
                    <i class="metismenu-icon pe-7s-rocket modal_close_icon" onclick="handleModalToggle()"></i>
                    <div class="modal_message_div">
                        <h3>Service Generated Successfully</h3>
                    </div>\
                    <button class="modal_ok_btn" onclick="handleModalToggle()"></button>
                </div>
            </div>
        <% } %>
        <div class="app-main__outer">
            <div class="app-main__inner">
                <div class="home_dash_parent_container">
                    <div class="add_service_parent">
                        <div class="form_heading_div">
                            <h3 class="my-4"><b>Add-Offers Form</b></h3>
                        </div>
                        <div class="services_form_parent_div">
                            <div class="row-form">
                                <form action="/admin/add-offers" method="POST" encType="multipart/form-data">
                                    <div class="col-form">
                                        <input class="effect-5" style="padding-left: 10px; height: 50px;"
                                            name="offer_title" type="text" placeholder="Title">
                                        <span class="focus-border"></span>
                                    </div>
                                    <div class="col-form">
                                        <input class="effect-5" style="padding-left: 10px; height: 50px;"
                                            name="offer_price" type="text" placeholder="Price">
                                        <span class="focus-border"></span>
                                    </div>
                                    <div class="col-form">
                                        <input class="effect-5" style="padding-left: 10px; height: 50px;"
                                            name="offer_description" type="text" placeholder="Description">
                                        <span class="focus-border"></span>
                                    </div>
                                    <div class="col-form">
                                        <input class="effect-5" accept="image/*" type="file" name="offerimage"
                                            placeholder="Offer Image">
                                        <span class="focus-border"></span>
                                    </div>
                                    <button class="add_service_btn" type="submit">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../includes/end_body.ejs') %>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            <script src="/js/add-service.js"></script>

</body>

</html>