<%- include('../includes/head.ejs') %>
    <div class="wrapper">
        <%- include('../includes/sidebar.ejs') %>
            <div id="content">
                <%- include('../includes/navbar.ejs') %>
                    <div class="main-content">
                        <div class="container-fluid">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <div class="card-header d-flex">
                                        <h5 class="card-header-title">Add FAQ Form</h5>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST" action="/admin/createfaqpost">
                                            <label for="brand_name">Faq</label>
                                            <textarea 
                                                type="text" 
                                                style="
                                                    padding-bottom: 10px;
                                                    margin-top: 10px; 
                                                    padding:10px;
                                                    width: 100%;
                                                    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                                                    border: none;" 
                                                class="form-control" 
                                                id="faq" 
                                                name="faq" required>
                                            </textarea>
                                            <label for="brand_image" style="margin-top: 20px;">Answer</label>
                                            <br />
                                            <textarea type="text" 
                                                style="
                                                    padding-bottom: 10px;
                                                    margin-top: 10px; 
                                                    padding:10px;
                                                    width: 100%;
                                                    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                                                    border: none;" 
                                                class="form-control" 
                                                value="" 
                                                id="answer" 
                                                name="answer" required>
                                            </textarea>
                                            <br />
                                            <button style="background-color: #148B4B; margin-top: 20px; color: #fff;"
                                                type="submit" class="btn">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <footer class="footer">
                            <div class="container-fluid">
                                <div class="row">
                                    <p class="copyright d-flex justify-content-end">
                                        &copy 2022 Design by TDPVista.
                                    </p>
                                </div>
                            </div>
                        </footer>
                    </div>
            </div>
    </div>

    <!-- Details Modal -->
    <div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="table col-lg-12 col-md-12">
                        <div class="card">
                            <img src="/images/logo.png" id="brand_photo" width="75px"
                                style="margin-left: 5px; padding: 10px; margin-right: auto;" />
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="id">Id - </h4>
                                </div>
                            </div>
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="name">Brand Name - </h4>
                                </div>
                            </div>
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="status">Status - </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button style="background-color: #148b4b; color: #fff; margin-left: 10px;" type="button"
                        class="btn btn-secondary" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
    <%- include('../includes/end_body.ejs') %>