<%- include('../includes/head.ejs') %>
<div class="wrapper">
    <%- include('../includes/sidebar.ejs') %>

        <!-- Page Content  -->
        <div id="content">
            <%- include('../includes/navbar.ejs') %>
                <div class="main-content">
                    <div class="table col-lg-12 col-md-12">
                        <div class="card" style="min-height: 485px">
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title">Weekly wash</h4>
                                </div>

                                <div style="display: flex; align-items: center">
                                    <input
                                        style="border-radius: 4px; height: 45px; width: 225px;box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;padding: 10px;"
                                        type="text" id="myInput" onkeyup="myFunction()" placeholder="Search" />
                                </div>
                            </div>

                            <div class="card-content table-responsive">
                                <table id="myTable" class="table table-hover">
                                    <thead style="color: #148b4b">
                                        <tr class="header">
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Vehicle Name</th>
                                            <th>Vehicle No.</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Slot</th>
                                            <th>Supervisor</th>
                                            <th>Details</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(weeklyWash.length> 0) { %>
                                            <% for (let data0 of weeklyWash) { %>
                                                <tr>
                                                    <td>
                                                        <%= data0.id %>
                                                    </td>
                                                    <td>
                                                        <%= data0.name %>
                                                    </td>
                                                    <td>
                                                        <%= data0.c_name %>
                                                    </td>
                                                    <td>
                                                        <%= data0.c_num %>
                                                    </td>
                                                    <td>
                                                        <%= data0.startdate %>
                                                    </td>
                                                    <td>
                                                        <%= data0.enddate %>
                                                    </td>
                                                    <td>
                                                        <%= data0.slot %>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-success"><%= data0.supervisor_num %></span>
                                                    </td>
                                                    <td>
                                                        <button id="assign" data-target="#detailsModal"
                                                            onclick="updateModalDetails('<%= data0.phone %>','<%= data0.name %>','<%= data0.c_name %>','<%= data0.c_num %>','<%= data0.startdate %>','<%= data0.enddate %>','<%= data0.slot %>','<%= data0.pay_status %>','<%= data0.supervisor_num %>','<%= data0.cleaner_num %>')"
                                                            data-toggle="modal"
                                                            style="background-color: #148b4b; color: #fff"
                                                            type="button" type="button" class="btn">
                                                            View Details
                                                        </button>
                                                    </td>
                                                    <td>
                                                        <% if(data0.status == "0"){ %>
                                                            <button id="assign" data-target="#statusModal"
                                                                onclick="storeDetails('<%= data0.id %>','<%= data0.phone %>')"
                                                                data-toggle="modal"
                                                                style="background-color: #148b4b; color: #fff"
                                                                type="button" type="button" class="btn">
                                                                Complete
                                                            </button>
                                                        <% } else { %>
                                                            <span class="badge badge-success">Completed</span>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="5">No data found</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="row">
                                <p class="copyright d-flex justify-content-end">
                                    &copy 2022 Design by TDPVista.
                                </p>
                            </div>
                        </div>
                    </footer>
                </div>
        </div>
</div>



<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="table col-lg-12 col-md-12">
                    <div class="card">
                        <img src="/images/logo.png" width="75px"
                            style="margin-left: 5px; padding: 10px; margin-right: auto;" />
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="name">Full Name - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="phone">Phone - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="sup_num">Supervisor - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="cleaner_num">Cleaner - <%= data.fName %></h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="sdate">Start Date - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="edate">End Date - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title" id="slot">Slot - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title">Total Bill - </h4>
                            </div>
                        </div>
                        <div style="
                            display: flex;
                            margin-top: 15px;
                            align-items: center;
                            justify-content: space-between;
                        ">
                            <div class="card-header card-header-text">
                                <h4 class="card-title">Vehicle</h4>
                            </div>
                        </div>
                        <div style="
                            display: block;
                            margin-top: 15px;
                            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            padding: 10px;
                        ">
                            <img src="/images/logo.png" width="55px"
                                style="margin-left: 5px; padding: 10px; margin-right: auto;" />
                            <div class="card-header card-header-text" style="margin-top: -10px;">
                                <h4 class="card-title" id="c_name">Vehicle Name - </h4>
                            </div>
                            <div class="card-header card-header-text" style="margin-top: -10px;">
                                <h4 class="card-title" id="c_num">Vehicle Number - </h4>
                            </div>
                        </div>
                    </div>
                </div>
                <button style="background-color: #148b4b; color: #fff; margin-left: 10px;" type="button"
                    class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Action Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="statusModal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="table col-lg-12 col-md-12">
                        <div class="card">
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="idAs">Id - </h4>
                                </div>
                            </div>
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="nameAs">Phone - </h4>
                                </div>
                            </div>
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-between;
                                box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
                            ">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title" id="messageAs"></h4>
                                </div>
                            </div>
                            <div style="
                                display: flex;
                                margin-top: 15px;
                                align-items: center;
                                justify-content: space-evenly;
                                padding: 20px;
                            ">
                                <button style="background-color: #148b4b; color: #fff; margin-left: 10px;" type="button"
                                    class="btn btn-secondary" data-dismiss="modal">
                                    No
                                </button>
                                <button id="assign" onclick="updateStatus()" class="btn btn-danger" type="button"
                                    class="btn">
                                    Yes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script>
    let num = "";
    let id = "";
    let status = "";
    // Methods for supervisor assignment
    function storeDetails(data,phone){
        console.log("CHECK THIS")
        num = phone;
        id = data;
        status = "0";
        document.getElementById('idAs').innerHTML = "Id - " + id;
        document.getElementById('nameAs').innerHTML = "Phone - " + phone;
        document.getElementById('messageAs').innerHTML = "Do you really want to complete this Service?";
        status = "1";
    }
    function updateStatus() {
        console.log(status)
        fetch('/admin/cleanerweeklycompleteservice', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                status: status,
                id: id,
                phone: num
            })
        }).then(res => {
            window.location.reload();
        })
    }
    
    // Methods for details modal
    function updateModalDetails(phone,name,c_name,c_num,sdate,edate,slot,pay_status,sup_num,cleaner_num){
        document.getElementById('name').innerHTML = "Full Name - "+name;
        document.getElementById('phone').innerHTML = "Phone - "+  phone;
        if(sup_num === ""){
            document.getElementById('sup_num').innerHTML = "Supervisor - Not Assigned";
        }else{
            document.getElementById('sup_num').innerHTML = "Supervisor - "+sup_num;
        }
        document.getElementById('sdate').innerHTML = "Start Date - "+sdate;
        document.getElementById('edate').innerHTML = "End Date - "+edate;
        document.getElementById('slot').innerHTML = "Slot - "+slot;
        document.getElementById('c_name').innerHTML = "Vehicle Name - "+c_name;
        document.getElementById('c_num').innerHTML = "Vehicle Number - "+c_num;

    }
</script>

<%- include('../includes/end_body.ejs') %>